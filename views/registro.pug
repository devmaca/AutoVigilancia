extends layout

block content
  -var doc=registro||{};
  form(action="/vehiculo/registrar" method="POST")
    input(type="hidden" class="form-control" id="_id" name="_id" placeholder="id" value=doc._id||"")
    div(class="form-row")
      div(class="form-group col-md-4")
        label(for="inputMovil") Numero de Movil
        input(type="text" class="form-control" id="num_movil" name="num_movil" value=doc.num_movil||"" placeholder="Numero de Movil")
      div(class="form-group col-md-4")
        label(for="inputTurno") Turno
        select(id="turno" name="turno" class="form-control" value=doc.turno||"")
          option(value="0") Ma√±ana
          option(value="1") Tarde
          option(value="2") Noche
      div(class="form-group-row col-md-4")
        label(for="inputPlaca") Placa
          input(type="text" class="form-control" id="placa" name="placa" value=doc.placa||"" placeholder="Numeros")
    div(class="form-row")
      div(class="form-group col-md-4")
        label(for="inputChasis") Chasis
        input(type="text" class="form-control" id="chasis" name="chasis" placeholder="Chasis" value=doc.chasis||"")
      div(class="form-group col-md-4")
        label(for="inputModelo") Modelo
        input(type="text" class="form-control" id="modelo" name="modelo" placeholder="Modelo" value=doc.modelo||"")
      div(class="form-group col-md-4")
        label(for="inputMarca") Marca
        input(type="text" class="form-control" id="marca" name="marca" placeholder="Marca" value=doc.marca||"")
    div(class="form-row")
      div(class="form-group col-md-6")
        label(for="inputAudio1") Microfono 1 (Audio)
        input(type="text" class="form-control" id="aud1" name="aud1" value=doc.aud1||"")
      div(class="form-group col-md-6")
        label(for="inputVideo1") Camara 1 (Video)
        input(type="text" class="form-control" id="vid1" name="vid1" value=doc.vid1||"")
    div(class="form-row")
      div(class="form-group col-md-6")
        label(for="inputAudio2") Microfono 2 (Audio)
        input(type="text" class="form-control" id="aud2" name="aud2" value=doc.aud2||"")
      div(class="form-group col-md-6")
        label(for="inputVideo2") Camara 2 (Video)
        input(type="text" class="form-control" id="vid2" name="vid2" value=doc.vid2||"")
    div(class="form-group")
      label(for="inputColor") Color
      input(type="text" class="form-control" id="color" name="color" placeholder="Color" value=doc.color||"")
    button(type="submit") Aceptar
  div(class="row")
    div(class="col-6" id="areaVid")
      textarea(name="areaVid" id="areaVid")
    div(class="col-6"  id="areaAud")
      textarea(name="areaAud" id="areaAud")
  script(src="/javascripts/getIdMedia.js")
